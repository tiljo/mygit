#include<stdio.h>
#define MAXLINE 1000

int get_line(char line[], int maxline);
void copy (char to[], char from[]);


main()
{
	int len;
	int max;
	char line[MAXLINE];
	char longest[MAXLINE];

	max=80;
	while((len=get_line(line,MAXLINE))>80)
		if (len>max){
			max=len;
			copy(longest,line);
		}
	if (max>80)
		printf("%s",longest);
	return 0;
}

int get_line(char s[], int lim)
{
	int c,i;
		i=0;
	while (c=getchar())!=EOF){
		if(i<lim-1){
			while(c !='\n'){
				s[i]=c;
				++i;
			}
		}
	}
	if (c =='\n'){
		s[i]=c;
		++i;

	}
	s[i] = '\0';
	return i;
}

void copy (char to[], char from[])
{
	int i;

	i=0;
	while ( (to[i]= from [i]) != '\0')
		++i;
}
